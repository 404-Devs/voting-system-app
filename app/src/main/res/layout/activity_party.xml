<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/partyLogo"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/vote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/partyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/partyLogo" />

        <TextView
            android:id="@+id/partySlogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/partyName"
            tools:ignore="RtlSymmetry" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chairmanGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedgbg"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/partySlogan">

            <ImageView
                android:id="@+id/chairmanPhoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/vote"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/chairmanTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Chairman"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="@id/chairmanPhoto"
                app:layout_constraintStart_toEndOf="@id/chairmanPhoto"
                app:layout_constraintTop_toTopOf="@id/chairmanPhoto"
                app:layout_constraintVertical_bias="0.098" />

            <TextView
                android:id="@+id/chairmanName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@id/chairmanPhoto"
                app:layout_constraintTop_toBottomOf="@id/chairmanTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/treasurerGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedgbg"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/chairmanGroup">

            <ImageView
                android:id="@+id/treasurerPhoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/vote"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/treasurerTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Treasurer"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="@id/treasurerPhoto"
                app:layout_constraintStart_toEndOf="@id/treasurerPhoto"
                app:layout_constraintTop_toTopOf="@id/treasurerPhoto"
                app:layout_constraintVertical_bias="0.098" />

            <TextView
                android:id="@+id/treasurerName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@id/treasurerPhoto"
                app:layout_constraintTop_toBottomOf="@id/treasurerTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secGenGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedgbg"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/treasurerGroup">

            <ImageView
                android:id="@+id/secGenPhoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/vote"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/secGenTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Secretary General"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="@id/secGenPhoto"
                app:layout_constraintStart_toEndOf="@id/secGenPhoto"
                app:layout_constraintTop_toTopOf="@id/secGenPhoto"
                app:layout_constraintVertical_bias="0.098" />

            <TextView
                android:id="@+id/secGenName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@id/secGenPhoto"
                app:layout_constraintTop_toBottomOf="@id/secGenTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/voteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Vote"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/secGenGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>